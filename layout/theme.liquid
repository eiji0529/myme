{%- if template =='search' -%}
  <script>
    // *再検索ページ用********* */
    $('.re-close-btn').on('click', function() {
        var target = document.getElementById('re-search-box');
        target.value = "";
        $('#re-search-box').val("");
    });
  </script>
{%- endif -%}

{% comment %}Lazy load{% endcomment %}
<script>
  $(function() {
      $("img.lazyload").lazyload({
          threshold: 350, //350px手前で画像を読み込み
          effect: 'fadeIn',
          effect_speed: 500,
          placeholder: '{{ 'loading.gif' | asset_url }}', //ダミー画像を指定
      });
  });
</script>

</body>
</html>
