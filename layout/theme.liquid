    <i>aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa</i>

  </main>

  {% comment %}
  ページ下部に海外発送注意の表示
  <div class="overseas">
    <div class="os-head"><span class="os-head-circle"></span></div>
    <h3>{{ 'general.overseas_notice.title' | t }}</h3>
    <p>{{ 'general.overseas_notice.content' | t }}</p>
    <p><input type="checkbox" id="next_stop">{{ 'general.overseas_notice.next_stop' | t }}</p>
  </div>
{% endcomment %}

  {% section 'footer' %}

{% endif %}


