.lookbook-container {
    width:100%;
    padding-bottom:50px;
    padding-top:50px;
}

.top-container {
    width:50%;
    margin-bottom: 50px;
    margin-left:auto;
    margin-right:auto;
}

.look-image {
    border:1px solid white;
    height:500px;
}

.look-image img {
    width: 100%;
    height: 500px;
    object-fit: cover;
}

.recent-look {
    display:flex;
    justify-content: space-between;
    width:80%;
    margin:0 auto;
    height:300px;
}

.recent {
    border:1px solid white;
    width:30%;
}

.recent img {
    width: 100%;
    height: 300px;
    object-fit: cover;
}

