.lookbook-container {
    width: 100%;
    padding-bottom: 5%;
    padding-top: 5%;
}

.top-container {
    margin-bottom: 5%;
}

/* 枠線 */
.look-image {
    margin-left: auto;
    margin-right: auto;
    border: 1px solid white;
    width: 600px;
    height: 400px;
}

.look-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.bottom-container {
    display: flex;
    justify-content: space-between; 
    width: 100%;
    margin: 0 auto;
    height: 100%;
}

.recent {
    border: 1px solid white;
    width: 400px;
    height: 300px;
    margin: 4%;
}

.recent img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

@media (max-width: 800px) {
    /* 枠線 */
    .look-image,.recent {
        width: 500px;
        height: 350px;
    }

    .bottom-container {
        width:100%;
        height:100%;
        flex-direction: column;
    }

    /* 枠線 */
    .recent {
        margin: 5% auto 0 auto;
    }
}

@media (max-width: 550px) {
    .top-container {
    }
    
    /* 枠線 */
    .look-image,.recent {
        width: 300px;
        height: 200px;
    }

    .bottom-container {
        width:100%;
        height:100%;
        flex-direction: column;
        margin-top:15%;
    }

    /* 枠線 */
    .recent {
        margin: 5% auto 5% auto;
    }
}

@keyframes fadeIn {
    from {
        opacity: 0;
    }
    to {
        opacity: 1;
    }
}

.look-image, .recent {
    animation: fadeIn 1s ease-out forwards;
}