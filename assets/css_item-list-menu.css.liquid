


.item-menu {
    margin: 30px 20px;
    display: flex;
    justify-content: center;
}
.item-title {
    padding: 3px 13px;
    margin: auto 1em;
    color: var(--white);
    box-sizing: border-box;
    border-radius: 1em;
    border: 2px solid transparent;

    position: relative;
    overflow: hidden;
}
.item-title::before {
    content: "";
    position: absolute;
    top: -3px;
    left: -13px;
    padding: 3px 13px;
    z-index: -1;
    border-radius: 50%;
    width: 100%;
    height: 100%;
    transform: scale(0);
    transform-origin: center;
    transition: 0.5s;
}
.item-title:hover::before {
    background: var(--dark-gray);
    color: var(--white);
    transform: scale(1);
}
.this-page {
    border: 2px solid var(--dark-gray);
    color: var(--dark-gray);
    font-weight: bold;
    background: var(--pink);
}

.submit-btn {
    cursor: pointer;
    border-radius: 1em;
    border: 1px solid var(--dark-gray);
    background: linear-gradient(to right, var(--blue), var(--pink));
    width: 100%;
    height: 2em;
}


/* -----------------------------------------
スマホ用CSS
--------------------------------------------*/
@media screen and (max-width:900px) {
    .item-menu {
        margin: 30px 10px;
        flex-wrap: wrap;
        justify-content: space-between;
    }
    .item-title {
        width: 30%;
        margin: auto 0;
    }
}