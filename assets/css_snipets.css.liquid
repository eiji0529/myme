

/* 数量変更ボタン */
.quantity {
    -webkit-appearance: textfield;
    -moz-appearance: textfield;
    appearance: textfield;
    font-size: var(--head-font-size);
    width: 2em;
    text-align: center;
    margin: auto 10px;
} 
.qty-select {
    position: relative;
    display: flex;
    align-items: center;
    width: fit-content;
}
.qty-select button {
    cursor: pointer;
    background-color: transparent;
    border: none;
    padding: 0;
    transition: 0.2s;
    opacity: 0.6;
}
.qty-select button:hover {
    opacity: 0.9;
}
#qty-minus span,
#qty-plus span {
    position: relative;
    display: block;
    height: 20px;
    width: 20px;
    border: 2px solid var(--base-gray);
    border-radius: 50%;
}
#qty-minus span::before,
#qty-plus span::before {
    content: "";
    position: absolute;
    width: 14px;
    height: 2px;
    background-color: var(--base-gray);
    top: 50%;
    transform: translate(-50%, -50%);
}
#qty-plus span::after {
    content: "";
    position: absolute;
    height: 14px;
    width: 2px;
    background-color: var(--base-gray);
    top: 50%;
    transform: translate(-50%, -50%);
}
