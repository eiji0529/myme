


#footer {
    position: relative;
    bottom: 0;
    width: 100%;
    height: fit-content;
    padding-bottom: 30px;
    background-color: var(--dark-gray);
    color: var(--white);
}

.footer-area {
    width: 100%;
    height: 100%;
    text-align: center;
}

.inf-links {
    padding-top: 30px;
}

.foot-infs {
    padding: 0;
    margin: 0;
    display: flex;
    justify-content: center;
}
.inf-icons {
    text-align: left;
}
.inf-icons img {
    height: 100%;
}

.sitemaps {
    display: flex;
    justify-content: center; 
    margin-top: 1em;
}
.sitemaps div {
    margin: auto 0.8em;
    font-size: var(--small-font-size);
}

.footer-company {
    margin-top: 1.5em;
    font-size: var(--small-font-size);
}




@media screen and (min-width:901px) {

    .foot-infs li:nth-child(n+2) {
        margin-left: 2em;
    }
    .inf-icons a {
        display: inline-block;
        height: 20px;
        margin-right: 10px;
    }
}




/* -----------------------------------------
スマホ用CSS
--------------------------------------------*/
@media screen and (max-width:900px) {

    .foot-infs {
        flex-wrap: wrap;
    }
    .foot-infs li {
        margin-top: 0.4em;
        width: 50%;
        text-align: left;
    }
    .foot-infs li:nth-child(2n+1) > div {
        padding-left: 2em;
        padding-right: 1em;
    }
    .foot-infs li:nth-child(2n) > div {
        padding-left: 0;
        padding-right: 2em;
    }
    .inf-icons a {
        display: inline-block;
        height: 24px;
        margin-top: 5px;
        margin-right: 10px;
    }
    
    .sitemaps {
        flex-wrap: wrap;
    }
}