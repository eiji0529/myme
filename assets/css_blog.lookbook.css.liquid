.news-separate {
    margin-bottom: 20px; /* ニュースセクション間の余白を設定 */
}

.news-detail {
    border: 1px solid #ccc; /* ニュースディテールの境界線を設定 */
    padding: 20px; /* ニュースディテールの内側の余白を設定 */
}

.news-image img {
    max-width: 100%; /* 画像を親要素にフィットさせる */
    height: auto; /* アスペクト比を維持しながら画像をリサイズする */
    display: block; /* 画像をブロックレベル要素として表示 */
    margin-bottom: 15px; /* 画像の下に余白を追加 */
}

h2 {
    color: #333; /* 見出しの色を設定 */
}

p {
    line-height: 1.6; /* 段落の行間を設定 */
}