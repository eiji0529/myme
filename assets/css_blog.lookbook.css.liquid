.lookbook-detail-container {
    display: flex;
    background-color:pink;
}

.lookbook-detail-image {
    background-color:blue;
    margin:0 auto;
}

.lookbook-detail-image img {
    max-width: 100%; /* 画像を親要素にフィットさせる */
    height: auto; /* アスペクト比を維持しながら画像をリサイズする */
    display: block; /* 画像をブロックレベル要素として表示 */
    margin:15px;
}

h2 {
    color: #333; /* 見出しの色を設定 */
}

p {
    line-height: 1.6; /* 段落の行間を設定 */
}