/* カートに追加ボタンを押したときの動作 */
.add-loader {
    display: block;
    height: 1.5em;
    width: 1.5em;
    margin: auto;
    position: relative;
    background: linear-gradient(to right, var(--blue), var(--pink));
    border-radius: 50%;
    animation: add_spin 0.8s linear infinite;
}
.add-loader::after {
    content: "";
    height: 1em;
    width: 1em;
    background-color: var(--white);
    border-radius: 50%;
    display: block;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}
@keyframes add_spin {
    from {
        transform: rotate(0deg);
    }
    to {
        transform: rotate(360deg);
    }
}
.add-success {
    box-shadow: 0 0 6px var(--pink);
    border: 1px solid var(--pink);
    color: var(--dark-gray);
    text-shadow: 0 0 3px var(--blue);
}


/* 販売前ボタン表示 */
.before-sale-btn {
    background: var(--white);
    cursor: default;
    display: flex;
    span {
        margin: auto;
    }
}
.before-sale-btn:hover {
    animation: none;
}