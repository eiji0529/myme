    display: flex;
}
.not-found > div {
    margin: auto;
    margin-top: calc(var(--header-height) + 60px);
    text-align: center;
}
.not-found h1 {
    color: var(--white);
}
.nf-sub {
    margin-bottom: 60px;
    color: var(--white);
}
.return-top {
    padding: 6px 10px;
}



/* ポリシーページ */
.shopify-policy__container {
    color: var(--white);
    line-height: 1.8em;
    margin-bottom: 40px;
}



/* 吹き出し用 */
.balloon,
.re_balloon {
    color: var(--dark-gray);
    text-shadow: 0 0 2px var(--white);
    width: max-content;
    max-width: 170px;
    padding: 1px 10px;
    background-color: var(--pink);
    position: absolute;
    left: 50%;
    border-radius: 5px;
}
.balloon {
    animation: updown 1s ease-out infinite;
    bottom: calc(100% + 10px);
}
.balloon::before,
.re_balloon::before  {
    content: "";
    position: absolute;
    border: 15px solid transparent;
    transform: translateX(-50%);
    left: 50%;
}
.balloon::before{
    border-top: 12px solid var(--pink);
    top: 98%;
}
@keyframes updown {
    from {
        transform: translate(-50%, -30%);
    }
    to {
        transform: translate(-50%, 0%);
    }
}
.re_balloon {
    animation: downup 1s ease-out infinite;
    top: calc(100% + 15px);
}
.re_balloon::before  {
    border-bottom: 12px solid var(--pink);
    bottom: 98%;
}
@keyframes downup {
    from {
        transform: translate(-50%, 0%);
    }
    to {
        transform: translate(-50%, -30%);
    }
}


/* 戻るボタン */
.history-back {
    cursor: pointer;
    border-radius: 1em;
    border: 1px solid var(--dark-gray);
    background: var(--blue);
    text-shadow: 1px 1px 1px rgba(230,230,230,0.7), -1px -1px 1px rgba(230,230,230,0.7);
    @media screen and (min-width:901px) {
        padding: 2px 10px;
    }
    @media screen and (max-width:900px) {
        padding: 5px 15px;
    }
}


.overseas {
    @media screen and (min-width:901px) {
        max-width: 30%;
    }
    @media screen and (max-width:900px) {
        width: 90%;
    }
    display: none;
    position: fixed;
    bottom: 0;
    left: 50%;
    z-index: 1;
    transform: translateX(-50%);
    text-align: center;
    background: var(--blue);
    border-radius: 1em 1em 0 0;
    overflow: hidden;
    h3 {
        color: var(--white);
        text-shadow: 2px 2px 3px black
    }
    p {
        padding: 0 1em;
    }
}
.os-head {
    background-color: var(--dark-gray);
    height: 30px;
    position: relative;
}
.os-head-circle {
    cursor: pointer;
    display: inline-block;
    width: 18px;
    height: 18px;
    background-color: var(--pink);
    border-radius: 50%;
    margin-left: 15px;
    position: absolute;
    top: 50%;
    left: 0;
    transform: translateY(-50%);
}







/* main-collection-list用 */
.item_swiper {
    overflow: hidden;
}
.swiper-wrapper {
    transition-timing-function: linear;
}
.swiper-slide {
    padding: 1px;
}
.main-collection-list {
    margin-bottom: 80px;
}
.main-collection-title {
    width: 100%;
    height: 80px;
    display: flex;
    margin: 30px 0;
}
.main-collection-title p {
    margin: auto;
    padding: 0;
    font-weight: bold;
    font-size: large;
    color: var(--white);
}
.main-collection-context {
    padding-top: 1em;
    /*border: 1px solid var(--base-border-color);
    border-top: none;
    */
}
.slide-text-title,
.slide-text-price {
    text-align: center;
}
.slide-text-title{
    margin-top: 0;
    margin-bottom: 0.4em;
}
.slide-text-price{
    margin-top: 0.4em;
    margin-bottom: 1em;
}
.m-c-slider-image {
    position: relative;
    height: 0;
    padding-top: 120%;
    overflow: hidden;
}
/* ホバーで２枚目を見せるのはPCのみ */
@media screen and (min-width:901px) {
.m-c-slider-image:hover img:first-child{
    opacity: 0;
}
}
/*----------*/
.collection-slider img:last-child {
    z-index: -1;
}
.collection-slider img {
    position: absolute;
    height: 100%;
    transition: 0.2s;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
}
.main-collection-link {
    display: flex;
}
.main-collection-link a {
    margin: auto;
    border: 1px solid var(--base-border-color);
    padding: 0.7em 2em;
    margin-top: 30px;
    transition: 0.3s;
}
.main-collection-link a:hover {
    background-color: #eaeaea;
}
/* swiperの矢印 */
.swiper-container {
    position: relative;
}
.swiper-arrow {
    width: 100%;
    margin: auto;
    position: absolute;
    top: 50%;
    z-index: 100;
    transform: translateY(-50%);
    svg {
        transition: 0.4s;
        width: 90%;
        max-width: 20px;
        height: 90%;
        margin: auto;
        fill-opacity: 0.2;
    }
    .swiper-button {
        cursor: pointer;
        position: absolute;
        top: 50%;
        width: 25px;
        background: rgba(35,35,35,0.1);
        transition: 0.4s;
    }
    .swiper-button:hover {
        background: rgba(35,35,35,0.7);
        opacity: 0.4;
        svg {
            fill: var(--white);
            stroke: var(--white);
            fill-opacity: 0.7;
            stroke-opacity: 0.7;
        }
    }
    .swiper-prev {
        display: flex;
        left: 0;
        transform: rotate(180deg) translateY(50%);
    }
    .swiper-next {
        display: flex;
        right: 0;
        transform: translateY(-50%);
    }
}




