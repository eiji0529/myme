:root {
    --main-logo-height: calc(100vh - var(--header-height));

    --white: #fafafa;
    --black: #333333;
    --base-color: linear-gradient(to right, #bca7c3, #c799b1);
    --base-gray: #4D4D4D;
    --dark-gray: #323232;
    --pink: #caabc6;
    --blue: #9cbee4;

    --footer-height: 0px;
    --header-height: 60px;
    --h1-font-size: 21px;
    --head-font-size: 16px;
    --midlarge-font-size: 15px;
    --base-font-size: 14px;
    --small-font-size: 13px;

    --base-border-color: #323232;
    --middle-border-color: #888;

    --header-height: 50px;
    --sp-menu-padding: 2em;
    --sp-menu-width: calc(101vw - var(--sp-menu-padding) * 2);
}



html {
    padding: 0!important;
    margin: 0;
    
    letter-spacing: 0.08rem;
    line-height: 1.5em;

    font-size: var(--base-font-size);
    font-family: 'Kiwi Maru', 'M PLUS 1p', 'Philosopher', sans-serif;
}
body {
    padding: 0;
    margin: 0;
    background: var(--base-color);
    position: relative;
}


footer {
    padding: 0;
    margin: 0;
}

a {
    text-decoration: none;
    color: inherit;
}
a:visited {
    color: inherit;
}
ul {
    list-style: none;
    padding: 0;
}
h1 {
    font-size: var(--h1-font-size);
}

#main {
    transition: 0.3s;
    min-height: calc(100vh - var(--header-height) - var(--footer-height));
}
#m-d {
    min-height: calc(100vh - var(--header-height) - var(--footer-height));
    padding-top: var(--header-height);
}


.blur {
    filter: blur(4px);
}
.blur a {
    pointer-events: none;
}
.hidden {
    display: none !important;
}


/* ボタンデザイン */
.submit-btn {
    cursor: pointer;
    border-radius: 1em;
    border: 1px solid var(--dark-gray);
    background: linear-gradient(to right, var(--blue), var(--pink));
    width: 100%;
    text-shadow: 1px 1px 1px rgba(230,230,230,0.7), -1px -1px 1px rgba(230,230,230,0.7);
    @media screen and (min-width:901px) {
        height: 2em;
    }
    @media screen and (max-width:900px) {
        height: 3em;
    }
}

/* 言語切替 */
#lang-btn {
    cursor: pointer;
    width: fit-content;
    position: relative;
    border: 1px solid var(--dark-gray);;
    border-radius: 5px;
    color: var(--dark-gray);;
    padding: 1px 5px;
    display: flex;
    justify-content: center;
    align-items: center;
    font-family: Verdana, Geneva, Tahoma, sans-serif;
}
#lang-btn span {
    margin: auto
}
.lang-selecter {
    display: none;
    cursor: default;
    position: absolute;
    top: calc(1.3em + 10px);
    background-color: var(--pink);
    border-radius: 0 0 5px 5px;
    border: 2px solid var(--dark-gray);
    border-top: none;
}
@media screen and (min-width:901px) {
    .lang-selecter {
        width: 36px;
    }
    .lang-selecter button {
        cursor: pointer;
        transition: 0.2s;
        width: 100%;
        border: none;
        background-color: transparent;
        opacity: 0.6;
        padding: 3px 0;
    }
    .lang-selecter button:hover {
        opacity: 1;
        font-weight: bold;
        background-color: rgba(255,255,255,0.6);
    }
    /* スマホ用言語切替 */
    .sp-language-switcher {
        display: none;
    }
}
@media screen and (max-width:900px) {
    .lang-selecter {
        width: 45px;
    }
    .lang-selecter button {
        width: 100%;
        border: 1px solid var(--base-gray);
        background-color: transparent;
        font-size: var(--head-font-size);
        padding: 4px;
    }
    /* スマホ用言語切替 */
    .sp-language-switcher {
        #sp-lang-btn {
            cursor: pointer;
            width: fit-content;
            position: fixed;
            top: 10px;
            right: 15px;
            border: 1px solid var(--white);
            border-radius: 5px;
            color: var(--white);
            padding: 1px 5px;
            display: flex;
            justify-content: center;
            align-items: center;
            font-family: Verdana,Geneva,Tahoma,sans-serif;
        }
    }
}


/* delighter */
.delighter {
    transition: 0.8s ease-out;
    transform: translateY(50px);
    opacity: 0;
}
.delighter.started {
    transform: none;
    opacity: 1;
}


/* shopify-challenge__container */
.shopify-challenge__container {
    margin-top: calc(var(--header-height) + 50px);
}


@media screen and (min-width:901px) {

    /* ページ表示 */
    .paginate {
        padding: 0;
        margin: 10px 60px;
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        justify-content: right;
    }
    .pages a,
    .pages div {
        height: 1em;
        width: 1em;
        padding: 6px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        transition: 0.2s;
    }
    .pages div {
        background: linear-gradient(to right, var(--blue), var(--pink));
        opacity: 0.8;
        color: var(--dark-gray);
    }
    .pages a:hover {
        background-color: var(--dark-gray);
    }
    .page-arrow {
        margin: 0 1em;
    }
    .page-arrow:hover {
        transform-origin: center;
        transform: scale(1.2);
    }

}




