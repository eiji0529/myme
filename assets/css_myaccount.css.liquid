        }
    }
}
.name-flex {
    display: flex;
    justify-content: space-between;
    > div {
        width: 48%;
    }
}

.disp-address {
    margin: auto;
    text-align: center;
}


/* ボタンデザイン */
.add-new-btn,
.edit-btn,
.del-btn {
    cursor: pointer;
    padding: 7px 16px;
    border: 2px solid var(--white);
    border-radius: 5px;
    font-size: var(--base-font-size);
}
.add-new-btn {
    background-color: var(--blue);
}
.edit-btn {
    margin-right: 10px;
    background-color: var(--pink);
}
.del-btn {
    background: transparent;
    color: var(--white);
}


/* インプットボックスデザイン */
.input-group {
    position: relative;
    margin-top: 1.5em;
}
.input-group input {
    width: 100%;
    transition: 0.2s;
    border: 3px solid transparent;
    background: transparent;
    outline: 1px solid var(--white);
    padding: 8px 8px;
    box-sizing: border-box;
    margin: 2px;
    color: var(--white);
}
.input-group input:focus {
    border-image: linear-gradient(to right, var(--blue), var(--pink));
    border-image-slice: 1;
    outline: 1px solid transparent;
}
.input-group input::placeholder {
    color: transparent;
}
.input-group label {
    position: absolute;
    top: -20px;
    display: block;
    transition: 0.2s;
    pointer-events: none;
    font-size: 0.7em;
    color: var(--white);
    padding-left: 8px;
}
.input-group {
    input:placeholder-shown ~ label {
        color: #ccc;
        font-size: 0.9em;
        top: 8px;
    }
    input:placeholder-shown ~ label.req {
        color: rgb(255, 50, 50);
    }
    input:focus ~ label {
        top: -20px;
        font-size: 0.7em;
        color: var(--blue);
    }
}
.select-country .req {
    color: rgb(255, 50, 50);
}

/* 入力必須項目エラー */
.required_text {
    display: none;
    color: rgb(255, 50, 50);
}

.myac-link {
    color: var(--dark-gray);
    font-weight: bold;
    padding: 3px 10px;
}


/* 注文履歴詳細 */
.order-number,
.order-date {
    display: flex;
}
.order-date {
    margin-bottom: 6px;
}
.order-detail-area {
    margin-bottom: 30px;
}
.order-items {
    width: 100%;
    border: 1px solid var(--white);
    padding: 5px 10px;
    tr td {
        text-align: right;
    }
    tr td:first-child {
        text-align: left;
    }
    thead td {
        border-bottom: 1px dashed var(--white);
    }
    tbody {
        line-height: 1.8em;
    }
    .order-item {
        margin: 1.4em 0;
        > div {
            display: flex;
            margin: 0.2em 0;
            > div:first-child {
                width: 40%;
            }
        }
    }
}
.total-list {
    padding: 5px 10px;
    border: 1px solid var(--white);
    border-top: none;
    > div {
        display: flex;
        justify-content: space-between;
    }
}
@media screen and (min-width:901px) {
    .order-sp {
        display: none;
    }
}
@media screen and (max-width:900px) {
    .order-pc {
        display: none;
    }
    .order-items {
        width: initial;
    }
}

@media screen and (min-width:901px) {
    .myac-addresses {
        display: flex;
        justify-content: center;
        .billings,
        .shippings {
            width: 30%;
        }
        form {
            display: flex;
            align-items: center;
        }
    }
}
.address-title,
.statuses {
    font-size: var(--head-font-size);
}
@media screen and (max-width:900px) {
    .myac-addresses {
        .billings,
        .shippings {
            margin: 2em 0;
            p:nth-child(3) {
                margin-left: 1em;
            }
        }
    }
}