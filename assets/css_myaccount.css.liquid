

/* マイアカウント */
.myac-title {
    display: flex;
    color: var(--white);
    margin-top: 60px;
    margin-bottom: 20px;
    p {
        margin: auto;
        font-size: large;
    }
}

.myac-main,
.add-main {
@media screen and (min-width:901px) {
    width: 80%;
}
@media screen and (max-width:900px) {
    width: 90%;
}
    margin: auto;
    margin-bottom: 120px;
    color: var(--white);
}
.myac-section {
    border-top: 2px solid var(--white);
    border-bottom: 2px solid var(--white);
    @media screen and (min-width:901px) {
        > div {
            margin-left: 2em;
            margin-right: 2em;
        }
    }
    @media screen and (max-width:900px) {
        > div {
            margin-left: 1em;
            margin-right: 1em;
    }
}
}
.address-list {
    @media screen and (min-width:901px) {
        margin-left: 2em;
        tr {
            th {
                text-align: right;
                font-weight: normal;
            }
            td {
                padding-left: 2em;
            }
        }
    }
    @media screen and (max-width:900px) {
        margin-left: 1em;
        tr {
            th {
                text-align: right;
                font-weight: normal;
            }
            td {
                padding-left: 1em;
            }
        }
    }
}

@media screen and (min-width:901px) {
    .edit-address {
        margin: 0.5em auto 40px 4em;
    }
}
@media screen and (max-width:900px) {
    .edit-address {
        margin: 2em auto;
        text-align: center;
        span {
            padding: 0.6em 1.1em;
        }
    }
}


/* 注文履歴 */
@media screen and (min-width:901px) {
    .myac-history {
        margin-top: 40px;
        margin-left: 2em;
    }
}
@media screen and (max-width:900px) {
    .myac-history {
        margin-top: 80px;
        margin-left: 1em;
    }
}



/* 配送先住所追加  padding: 30px 7%; */
.new-address {
    text-align: center;
}

@media screen and (min-width:901px) {
    .new-add-form {
        display: none;
        width: 30%;
        min-width: 200px;
        padding: 20px 7%;
        margin: auto;
        background-color: var(--dark-gray);
        border-radius: 10px;
        border: 3px solid var(--pink);
        color: var(--white);
    }
}
@media screen and (max-width:900px) {
    .new-add-form {
        display: none;
        width: 70svw;
        padding: 20px;
        margin: auto;
        background-color: var(--dark-gray);
        border-radius: 10px;
        border: 3px solid var(--pink);
        color: var(--white);
    }
}
.select-country,
.select-province {
    color: var(--white);
    margin-top: 0.6em;
    select {
        display: block;
        width: 100%;
    }
}
.set-default {
    margin-top: 0.8em;
    input,
    label {
        cursor: pointer;
    }
    label {
        user-select: none;
    }
}
.set-btn {
    margin-top: 0.8em;
    display: flex;
    justify-content: space-between;
    @media screen and (min-width:901px) {
        button {
            width: 45%;
            height: 2.5em;
            border-color: var(--white);
            font-weight: bold;
        }
    }
    @media screen and (max-width:900px) {
        button {
            width: 47%;
            height: 3.5em;
            border-color: var(--white);
            font-weight: bold;
        }
    }
}
.cancel-btn {
    background: transparent;
    color: var(--white);
    text-shadow: none;
}

/* 注文履歴 */
.myac-ordered {
    margin-top: 20px;
    margin-bottom: 20px;
    padding: 0.6em 0;
    border-top: 1px solid var(--white);
    border-bottom: 1px solid var(--white);
}
.myac-order-date {
    display: flex;
    width: 100%;
    border-bottom: 1px dashed var(--white);
}
.myac-order-date div:first-child {
    margin-right: 1.5em;
}
.ord-detail a {
    padding: 3px 10px;
    background: var(--pink);
    border-radius: 1em;
    border: 1px solid var(--dark-gray);
    color: var(--dark-gray);
}
@media screen and (min-width:901px) {
    .myac-order-detail {
        display: flex;
        justify-content: space-between;
        .ord-detail {
            width: 15%;
            display: flex;
            div {
                margin: auto;
            }
        }
        .ord-num,
        .ord-pay,
        .ord-fulfill {
            width: 20%;
        }
        .ord-amount {
            width: 25%;
        }
    }
}
@media screen and (max-width:900px) {
    .myac-order-detail {
        > div {
            display: flex;
            margin-left: 0.8em;
            margin-top: 0.3em;
        }
        > div:nth-child(n+2) > div:first-child {
            width: 50%;
        }
        .ord-detail {
            margin: 1em auto;
            > div {
                margin: auto;
                a {
                    padding: 0.3em 1.1em;
                }
            }
        }
        
    }
}
.no-order {
    margin-left: 1em;
}


/* 住所更新 */
.addresses {
    @media screen and (min-width:901px) {
        margin: 40px auto;
        padding: 20px 7%;
        width: 35svw;
    }
    @media screen and (max-width:900px) {
