

.svg-hidden {
    display: none;
}


#header {
    height: var(--header-height);
    background:  var(--base-color);
    position: fixed;
    top: 0;
    width: 100vw;
    z-index: 1000;
    display: flex;
    justify-content: space-between;
}

.head-logo {
    display: flex;
    margin-left: 25px;
    .brand-logo {
        height: 20px;
        margin: auto;
        img {
            height: 100%;
        }
    }
    .brand-text {
        display: flex;
        a {
            margin: auto 0.4em;
        }
    }
}


@media screen and (min-width:901px) {
    .head-menu {
        display: flex;
        transform: translate(-50%, -50%);
        position: absolute;
        left: 50%;
        top: 50%;
        .menu-list-btn {
            display: none;
        }
        .head-main-menu-list {
            display: flex;
            margin: auto;
            > li .main-menu-name {
                cursor: pointer;
                padding: 0 0.5em;
                margin-right: 0.5em;
            }
            > li:last-child .main-menu-name {
                margin-right: 0;
            }
            .head-main-menu {
                margin-right: 0.5em;
                > a {
                    transition: 0.3s;
                    color: var(--black);
                }
            }
            .head-main-menu:hover > a {
                background: var(--hover-btn-color);
            }
        }

        .head-sub-menu-list {
            padding-top: 1em;
            padding-left: 0.6em;
            position: absolute;
            background-color: var(--white);
            display: none;
            width: max-content;    color: var(--black);
            background-color: var(--pink);
            border-right: 3px solid var(--base-gray);
            border-bottom: 3px solid var(--base-gray);
            border-left: 3px solid var(--base-gray);
            border-radius: 0 0 10px 10px;
            li {
                padding-right: 1em;  padding-left: 0.8em;
            }
            .head-sub-menu {
                transform: translateX(-100%);
                opacity: 0;
                transition: 0.2s;
                margin: 4px 14px 4px 0px;
                .sub-menu-title {
                    display: block;
                    width: 100%;
                    height: 100%;
                    padding-top: 4px;
                    padding-bottom: 5px;
                    position: relative;
                }
                /* 孫メニュー */
                .s2-menu {
                    background-color: var(--white);
                    position: absolute;
                    right: 0;
                    left: calc(100% + 1em);
                    top: -0.3em;
                    width: max-content;
                    transform: translateX(-100%);
                    transition: 0.2s;
                    visibility: hidden;
                    color: var(--black);
                    background-color: var(--pink);
                    border-right: 3px solid var(--base-gray);
                    border-bottom: 3px solid var(--base-gray);
                    border-top: 3px solid var(--base-gray);
                    border-radius: 0 10px 10px 0;
                    overflow: hidden;
                }
                .s2-menu-item {
                    padding: 5px 8px;
                }
                .s2-menu-open .s2-menu {
                    transform: translateX(0);
                    visibility: visible;
                }
            }
            .head-sub-menu.menu_slide_in {
                transform: translateX(0);
                opacity: 1;
            }
            .head-sub-menu:hover,
            .s2-menu-item:hover {
                background: var(--dark-gray);
                color: var(--white);
            }
        }
    }
    .account-btn {
        position: relative;
    }
}
/* ユーザーメニュー */
@media screen and (min-width:901px) {
    .user-menu {
        margin: 0;
        display: none;
        position: absolute;
        width: max-content;
        transform: translateX(-50%);
        left: 50%;
        overflow: hidden;
        color: var(--black);
        background-color: var(--pink);
        border-right: 3px solid var(--base-gray);
        border-bottom: 3px solid var(--base-gray);
        border-left: 3px solid var(--base-gray);
        border-radius: 0 0 10px 10px;
        li {
            margin: 0.3em auto;
            transform: translateX(-100%);
            opacity: 0;
            transition: 0.2s;
            a {
                display: inline-block;
                padding: 4px 1em;
            }
        }
        .head-sub-menu.menu_slide_in {
            transform: translateX(0);
            opacity: 1;
        }
        .head-sub-menu:hover {
            background: var(--dark-gray);
            color: var(--white);
        }
    }
}


@media screen and (max-width:900px) {
    .head-menu {
        display: flex;
        transform: translate(-50%, -50%);
        position: absolute;
        left: 50%;
        top: 50%;
        height: var(--header-height);
        .menu-list-btn {
            margin: auto;
            font-size: var(--midlarge-font-size);
            padding: 0.5em 0;
            display: flex;
            .menu-mark {
                position: relative;
                width: 20px;
                display: block;
                span {
                    display: inline-block;
                    position: absolute;
                    top: 50%;
                    height: 2px;
                    width: 10px;
                    background-color: var(--base-border-color);
                    transition: 0.3s;
                }
                span:first-child {
                    transform: rotate(45deg);
                }
                span:last-child {
                    transform: rotate(-45deg);
                    left: 7px;
                }
            }
        }
        .open .menu-mark {
            span {
                width: 12px;
            }
            span:first-child,
            span:last-child {
                left: 4px;
            }
        }

        .head-main-menu-list {
            position: fixed;
            margin: 0;
            transition: 0.5s;
            padding: 0 var(--sp-menu-padding);
            width: var(--sp-menu-width);
            height: calc(100svh - var(--header-height));
            left: 50%;
            background-color: var(--pink);
            overflow-y: auto;
        }
        .menu-list-btn ~ .head-main-menu-list {
            opacity: 0;
            transform: translateY(-100%) translateX(-50%);
            top: 0;
        }
        .open ~ .head-main-menu-list {
            opacity: 1;
            top: var(--header-height);
            transform: translateY(0) translateX(-50%);
        }
        .head-main-menu {
            .main-menu-name {
                font-size: var(--midlarge-font-size);
                display: block;
                padding: 0.5em;
                margin: 1.5em 0 0;
                border-bottom: 1px solid var(--middle-border-color);
            }
            .head-sub-menu-list {
                padding-left: 1em;
                .sub-menu-title {
                    display: block;
                    border-bottom: 1px dashed var(--middle-border-color); 
                    padding: 1em 0 1em 1em;
                    margin-right: 1em;
                }
                .s2-menu {
                    padding: 0.5em 0 0.5em 2em;
                    .s2-menu-item {
                        padding: 0.6em 0;
                    }
                }
            }
        }
    }
}

/* ユーザーメニュー */
@media screen and (max-width:900px) {
    .user-menu {
        visibility: hidden;
        opacity: 0;
        position: fixed;
        top: -100%;
        left: 0;
        z-index: -1;
        width: 100svw;
        margin: 0;
        background-color: var(--white);
        transition: 0.3s;
        text-align: center;
        box-shadow: 0 3px 5px -3px var(--noselect-border-color);
        .head-sub-menu {
            border-bottom: 1px solid var(--middle-border-color);
            a {
                display: inline-block;
                width: 100%;
                padding: 1em 0;
            }
        }
    }
    .user-open > .user-menu {
        visibility: visible;
        opacity: 1;
        top: var(--header-height);
    }
}


