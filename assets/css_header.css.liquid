    }
}




/* 検索関連 ------------------------------------*/
/* 検索ボックス 共通部分 */
#search-open-check {
    display: none;
}
#search-btn svg,
.close-btn svg {
    height: 100%;
    width: 100%;
}
#search-btn,
.close-btn {
    box-sizing: border-box;
    cursor: pointer;
    background-color: transparent;
    border: none;
}

#search-box::placeholder {
    opacity: 0;
}
#search-open-check:checked ~ #search-box::placeholder {
    opacity: 0.7;
}
#search-box:focus#search-box::placeholder {
    opacity: 0.2;
}
#search-box:focus {
    outline: none;
    box-shadow: 0 0 5px var(--blue);
}
.close-btn,
.search-separate {
    opacity: 0;
    transition: 0.3s;
    display: none;
}
.search-separate.search-open,
.close-btn.search-open {
    opacity: 1;
    display: block;
}

/* 検索ボックス */
#search-area {
    transition: 0.3s;
    position: relative;
    width: 32px;
    height: 35px;
}
#search-area.search-open {
    width: 30vw;
}

#search-box {
    height: 100%;
    border-radius: 12px;
    border: 2px solid transparent;
    color: var(--dark-gray);
    font-size: 16px;
    font-weight: 300;
    padding: 0;
    transition: 0.2s;
    width: 100%;
    background-color: transparent;
    box-sizing: border-box;
    padding-left: 8px;
}
#search-btn,
.close-btn {
    height: 100%;
    padding: 2px;
    width: 24px;
}


@media screen and (min-width:901px) {
    #search-open-check:checked ~ #search-box {
        border: 2px solid var(--dark-gray);
        background-color: #ddd;
    }
    #search-btn,
    .close-btn,
    .search-separate {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
    }

    #search-btn {
        right: 5px;
        width: 24px;
    }
    .close-btn {
        right: 38px;
        width: 18px;
    }
    .search-separate {
        right: 32px;
        height: 18px;
        width: 1px;
        background-color: var(--dark-gray);
    }
}
@media screen and (max-width:900px) {
    #search-area {
        margin: auto;
        z-index: 100;
    }
    #search-box {
        display: none;
        color: var(--dark-gray);
    }
    .sp-active #search-box {
        display: block;
        position: absolute;
        top: 60px;
        right: calc(10vw - 12px - 6px + 20px);
        border-radius: 10px;
        width: calc(80vw - 20px);
        font-size: var(--base-font-size);
        padding: 6px;
        border: 2px solid var(--dark-gray);
        background: var(--dark-gray);
    }
    #search-box::placeholder {
        opacity: 0.7;
        color: var(--dark-gray);
    }
    #search-open-check:checked ~ #search-box {
        border: 2px solid var(--dark-gray);
        background-color: #ddd;
        position: fixed;
        left: 0;
        display: block;
        height: 3em;
        background: #ddd;
    }
    .search-open #search-btn,
    .close-btn,
    .search-separate {
        position: absolute;
        bottom: 32%;
        transform: translateY(50%);
    }

    .search-open #search-btn {
        right: 5px;
        width: 24px;
    }
    .close-btn {
        right: 38px;
        width: 25px;
    }
    .search-separate {
        right: 32px;
        height: 18px;
        width: 1px;
        background-color: var(--white);
    }
}
