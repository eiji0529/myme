    .head-icons {
        display: flex;
        justify-content: right;
        margin-right: 25px;
        .head-icon {
            margin: auto 8px;
            .cart-link,
            .account-link {
                width: 24px;
                display: block;
            }
        }
        svg {
            fill: var(--black);
            height: 24px;
            width: 100%;
        }
        #search-btn svg {
            stroke-width: 1px;
            stroke: var(--black);
        }
    }
    .cart-link {
        position: relative;
    }
    .cart-items {
        display: flex;
        width: 1.4em;
        height: 1.4em;
        background-color: var(--blue);
        border: 1px solid var(--dark-gray);
        position: absolute;
        bottom: 40%;
        right: 60%;
        border-radius: 50%;
