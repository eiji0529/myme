@media screen and (max-width:900px) {
    .shop-name {
        font-size: 20px;
        font-weight: bold;
        color: var(--white);
        position: absolute;
        top: 10px;
        left: 50%;
        transform: translateX(-50%);
    }

    .nav-menu {
        position: fixed;
        top: 0;
        left: 0;
        z-index: 100;
    }

    #head-nav {
        width: 100%;
        position: fixed;
        top: 0;
        left: 0;
        transition: 0.3s;
        opacity: 0;
        transform: translateY(-100%);
        background-color: var(--dark-gray);
        color: var(--white);
    }
    #head-nav.active-menu {
        display: block;
        opacity: 1;
        transform: translateY(0);    height: 100%;
        overflow: auto;
        border-left: 4px solid var(--pink);
        border-right: 4px solid var(--blue);
        box-sizing: border-box;
    }
    .hbar {
        margin-top: 115px;
        padding-left: 40px;
        padding-right: 40px;
        margin-bottom: 40px;
    }
    .mbar {
        margin-bottom: 20px;
    }
    .m-title {
        margin-bottom: 10px;
        border-bottom: 1px solid var(--white);
    }
    .sub-menu {
        padding-left: 0.5em;
    }
    .sub-menu a,
    .sub-menu a div {
        width: 100%;
        display: block;
    }
    .sub-menu-title,
    .sub-mbar div:nth-child(n+1) {
        padding: 10px 0;
        border-bottom: 1px solid var(--white);
    }
    .sub-sub-menu {
        padding-left: 1em;
    }
    .sub-sub-menu a {
        padding-left: 1.5em;
    }



    .head-icons {
        display: none;
        position: fixed;
        top: 5px;
        right: 12px;
        height: 50px;
        z-index: 101;
    }
    .head-icons.sp-active {
        display: flex;
        justify-content: right;
        opacity: 0;
        animation-name: sp_icon_open;
        animation-duration: 0.3s;
        animation-delay: 0.2s;
        animation-fill-mode: forwards;
    }
    @keyframes sp_icon_open {
        0% {
            opacity: 0;
        }
        100% {
            opacity: 1;
        }
    }
    .head-icon {
        margin: auto auto auto 13px;
    }

    #search-box {
        display: none;
        color: var(--white);
    }
    #search-btn {
        height: 30px;
        width: 31px;
        position: absolute;
        top: 63px;
        right: 0;
    }
    .close-btn {
        display: none !important;
    }
    .sp-active #search-box {
        display: block;
        position: absolute;
        top: 60px;
        right: calc(10vw - 12px - 6px + 20px);
        border-radius: 10px;
        width: calc(80vw - 20px);
        font-size: var(--base-font-size);
        padding: 6px;
        border: 2px solid var(--white);
        background: var(--dark-gray);
    }
    #search-box::placeholder {
        opacity: 0.7;
        color: var(--white);
    }

    .account-btn {
        display: flex;
    }
    .account-btn a {
        border: 1px solid var(--white);
        border-radius: 1em;
        color: var(--white);
        padding: 1px 15px;
    }

    .cart-link {
        display: block;
        width: 24px;
        height: 24px;
        margin: auto;
    }
    
}