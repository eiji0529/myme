

<svg xmlns="http://www.w3.org/2000/svg" class="hidden">
    <symbol id="icon-search" viewBox="0 0 18 19">
        <path fill-rule="evenodd" clip-rule="evenodd" d="M11.03 11.68A5.784 5.784 0 112.85 3.5a5.784 5.784 0 018.18 8.18zm.26 1.12a6.78 6.78 0 11.72-.7l5.4 5.4a.5.5 0 11-.71.7l-5.41-5.4z"></path>
    </symbol>

    <symbol id="icon-close" class="icon icon-close" viewBox="0 0 18 17">
        <path d="M.865 15.978a.5.5 0 00.707.707l7.433-7.431 7.579 7.282a.501.501 0 00.846-.37.5.5 0 00-.153-.351L9.712 8.546l7.417-7.416a.5.5 0 10-.707-.708L8.991 7.853 1.413.573a.5.5 0 10-.693.72l7.563 7.268-7.418 7.417z">
    </path></symbol>
</svg>



<form action="{{ routes.search_url }}" method="get" role="search" id="search_form">
    <div id="search-area">
        <input type="checkbox" id="search-open-check">
        <input
            class=""
            id="search-box"
            type="text"
            name="q"
            value=""
            placeholder="{{ 'general.search.search' | t }}"
            autocomplete="off"
        >
        
            <button type="reset" class="close-btn" for="search-open-check">
                <svg class="icon" aria-hidden="true" focusable="false">
                    <use xlink:href="#icon-close">
                </svg>
            </button>
    
            <span class="search-separate"></span>

        <button type="button" id="search-btn">
            <svg class="icon" aria-hidden="true" focusable="false">
                <use href="#icon-search">
            </svg>
        </button>
    
    </div>
</form>

