<section class="cart-area">
  {% form 'cart', cart %}
    <div class="cart-head">
    <p>カート</p>
    <div class="cart-notify"></div>
    <a href="#" class="cart-close"><span></span><span></span></a>
    </div>

    <div class="cart-items">
      {% if cart.item_count > 0 %}
        <ul>
          {% for item in cart.items %}
            <li class="cart-item">
              <input type="hidden" class="item-id" value="{{ item.id }}">
              <div class="cart-image">
                <a href="{{ item.url | within: collections.all }}">
                  <img src="{{ item | img_url: 'x150' }}" alt="{{ item.title | escape }}">
                </a>
              </div>
              <div class="cart-desc">
                <p class="item-name"><a href="{{ item.url | within: collections.all }}">{{ item.product.title }}</a></p>
                {% for option in item.options_with_values %}
                  {% if option.value != 'Default Title' %}
                    <p class="item-varie">{{ option.name }}:<span>{{ option.value }}</span></p>
                  {% endif %}
                {% endfor %}
                <p class="item-price">{{ item.price | money }}</p>
                <div class="item-qty">
                  <span>数量:</span>
                  <select class="item-selct-qty">
                    {% for i in (1..10) %}
                      <option value="{{ i }}"{%- if i == item.quantity -%}selected{%- endif -%}>{{ i }}</option>
                      {%- if i == item.variant.inventory_quantity -%}{% break %}{% endif %}
                    {% endfor %}
                  </select>
                </div>
              </div>
              <a href="#" class="item-delete"><span></span><span></span></a>
            </li>
          {% endfor %}
        </ul>
      {% else %}
      <ul><li class="cart-blank">カートは空です</li></ul>
      {% endif %}
    </div>

    {% if cart.item_count > 0 %}
      <div class="cart-checkout">
        <div class="cart-subtotal">
          <p>小計</p>
          <p class="cart-subtotal-price">{{ cart.total_price | money }}</p>
        </div>
        <div class="cart-sub-text">送料、税金、割引コードは購入ページで計算されます</div>
        <div class="cart-check-btn"><button name="checkout"><span>購入ページへ</span></button></div>
      </div>
    {% endif %}
  {% endform %}
</section>




