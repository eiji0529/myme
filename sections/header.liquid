




<header id="header">
  <div class="head-logo">
    {% if section.settings.head-logo != blank %}
      <div class="brand-logo">
        <a href="/"><img src="{{ section.settings.head-logo | img_url: '90x' }}" alt="{{ shop.name }}"></a>
      </div>
    {% else %}
    <div class="brand-logo">
      <a href="/"><img src="{{ 'brandlogo.png' | asset_img_url: '90x' }}" alt="{{ shop.name }}"></a>
    </div>
    {% endif %}
  </div>
  

  <div class="head-menu">
    <div class="menu-list-btn">MENU<span class="menu-mark"><span></span><span></span></span></div>
    <ul class="head-main-menu-list">
      {% for main_menu in linklists.main-menu.links %}
      {% assign sub_menu = main_menu.title | handleize %}
        {% if main_menu.url %}
          <li class="head-main-menu">
            <a href="{{ main_menu.url }}" class="main-menu-name">{{ main_menu.title }}</a>
            <ul class="head-sub-menu-list">

              {% for childlink in linklists[sub_menu].links %}
                <li class="head-sub-menu">
                  <div class="sub-menu-title">{{ childlink.title | link_to: childlink.url }}
                    {% assign sub_sub_list_handle = childlink.title | handleize %}

                    {% if linklists[sub_sub_list_handle].links != blank %}
                      <div class="s2-menu">
                        {% for grandchildlink in linklists[sub_sub_list_handle].links %}
                          <div class="s2-menu-item">
                            <a href="{{ grandchildlink.url }}">{{ grandchildlink.title }}</a>
                          </div>
                        {% endfor %}
                      </div>
                    {% endif %}

                  </div>
                </li>
              {% endfor %}
            </ul>
          </li>
        {% else %}
        <li class="head-main-menu">
          <div class="main-menu-name">{{ main_menu.title }}</div>
        </li>
        {% endif %}
      {% endfor %}
    </ul>
  </div>


  <div class="head-icons">
    <div class="head-icon">
      {% render 'search-box' %}
    </div>
    <div class="head-icon">
      {% render 'cart-icon' %}
    </div>
    <div class="head-icon sign-btn">
      {% render 'user-icon' %}

  {% comment %}
      {% if customer %}
        <div class="customer-icons">
          <div class="user-icon">
            <a href="{{ routes.account_url }}" class="account-link">
              <svg class="icon" aria-hidden="true" focusable="false">
                  <use href="#icon-user">
              </svg>
            </a>
          </div>
          <div class="account-btn">{{ 'log out ' | customer_logout_link }}</div>
        </div>
      {% else %}
      <div class="account-btn"><span>{{ 'log in ' | customer_login_link }}</span></div>
      {% endif %}
  {% endcomment %}
    </div>
    
    <div class="head-icon language-switcher">
      {% render 'select-language' %}
    </div>
  </div>
</header>





